precision highp float;

uniform vec3 color;
uniform float time;

varying vec3 vNormal;
varying vec3 vPosition;
varying vec3 vModPosition;

#pragma glslify: noise = require('glsl-noise/periodic/4d')

void main () {
  gl_FragColor = vec4(color * (vNormal.z * 0.25 + 0.75), 1.0);
  float pn = noise(vec4(50.0 * vPosition.xyz, time), vec4(500.0));

  pn = step(0.5, pn);
  gl_FragColor.rgb += 0.5 * pn;
}
